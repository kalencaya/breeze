<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyu.breeze.dao.mapper.DiJobMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="DiJobMap" type="com.liyu.breeze.dao.entity.DiJob">
        <result column="id" property="id" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="editor" property="editor" />
        <result column="update_time" property="updateTime" />
        <result column="project_id" property="projectId" />
        <result column="job_code" property="jobCode" />
        <result column="job_name" property="jobName" />
        <result column="directory_id" property="directoryId" />
        <result column="job_type" property="jobType" />
        <result column="job_owner" property="jobOwner" />
        <result column="job_status" property="jobStatus" />
        <result column="runtime_state" property="runtimeState"/>
        <result column="job_version" property="jobVersion" />
        <result column="remark" property="remark" />
        <result column="cluster_id" property="clusterId"/>
    </resultMap>

    <select id="selectPage" resultMap="DiJobMap">
        <![CDATA[
        select
            id,
            project_id,
            job_code,
            job_name,
            directory_id,
            job_type,
            job_owner,
            job_status,
            runtime_state,
            job_version,
            cluster_id,
            remark,
            creator,
            create_time,
            editor,
            update_time
        from
        (
            select
                *,
                row_number() over(partition by job_code,directory_id order by job_version desc) as rn
            from di_job
        ) t
        ]]>
        <where>
            rn = 1
            <if test="job.projectId != null ">
                and t.project_id = #{job.projectId,jdbcType=BIGINT}
            </if>
            <if test="job.jobCode != null and job.jobCode != '' ">
                and t.job_code like concat('%',#{job.jobCode,jdbcType=VARCHAR},'%')
            </if>
            <if test="job.jobName != null and job.jobName != ''">
                and t.job_name like concat('%',#{job.jobName,jdbcType=VARCHAR},'%')
            </if>
            <if test="job.jobStatus != null and job.jobStatus != '' ">
                and t.job_status = #{job.jobStatus,jdbcType=VARCHAR}
            </if>
            <if test="job.jobType != null and job.jobType != '' ">
                and t.job_type = #{job.jobType,jdbcType=VARCHAR}
            </if>
            <if test="job.runtimeState != null and job.runtimeState != '' ">
                and t.runtime_state = #{job.runtimeState,jdbcType=VARCHAR}
            </if>
            <if test="job.directoryId != null ">
                and t.directory_id = #{job.directoryId,jdbcType=BIGINT}
            </if>
            <if test="job.clusterId != null ">
                and t.cluster_id = #{job.clusterId,jdbcType=BIGINT}
            </if>
        </where>
    </select>

</mapper>
